<UserControl x:Class="MLView.Controls.TrainerControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MLView.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="70"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Button x:Name="StartButton" Content="Start" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" IsEnabled="False"/>
        <Button x:Name="PauseButton" Content="Pause" Click="PauseButton_Click" IsEnabled="False"/>
        <Button x:Name="ContinueButton" Content="Continue" Click="ContinueButton_Click" IsEnabled="False"/>
    </StackPanel>
</UserControl>
